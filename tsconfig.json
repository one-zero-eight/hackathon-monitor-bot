{
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "lib": ["ESNext"],
    "moduleDetection": "force",
    "baseUrl": "./",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["bun-types"],
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "strict": true,
    "downlevelIteration": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
